<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.Views.ListToDoView"
             xmlns:viewModels="clr-namespace:project.ViewModels"
             xmlns:views="clr-namespace:project.Views"
             x:DataType="viewModels:ToDoItmesViewModel"
             Title="Задачи:">

    <ContentPage.BindingContext>
        <viewModels:ToDoItmesViewModel/>
    </ContentPage.BindingContext>

    <!-- Command="{Binding ListReloadCommand}" -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Обновить"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <views:ActiveToDoItems Margin="0" BindingContext="{Binding ActiveToDoListViewModel}"/>
    </StackLayout>
</ContentPage>