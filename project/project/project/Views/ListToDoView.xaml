<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.Views.ListToDoView"
             xmlns:viewModels="clr-namespace:project.ViewModels"
             Title="Задачи:">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Обновить" Command="{Binding ListReloadCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <ContentPresenter BindingContext="{Binding ListActiveToDoViewModel}"></ContentPresenter>
        <ContentPresenter BindingContext="{Binding ListWaitingToDoViewModel}" Margin="0,10,0,0"></ContentPresenter>
    </StackLayout>
</ContentPage>